@page "/"
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<div class="homepage-container">
    <HeroSlider />

    <!-- 2. BỘ SƯU TẬP -->
    @if (categories != null && categories.Any())
    {
        <div class="container collection-section mt-5">
            <h2 class="section-title text-primary fw-bold">Bộ Sưu Tập</h2>
            <hr class="section-divider" />
            <div class="row">
                @foreach (var category in categories.Take(9))
                {
                    <div class="col-12 col-md-4 mb-4">
                        <a href="@($"/category/{category.Id}")" class="collection-card shadow-sm">
                            <img src="@($"/images/category-{category.Id}.jpg")" alt="@category.Name" class="rounded-3" />
                            <div class="collection-card-overlay">
                                <h3 class="fw-semibold text-white text-center">@category.Name</h3>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }

    <!-- 3. TOP SẢN PHẨM NỔI BẬT -->
    <div class="container latest-products-section mt-5">
        <h2 class="section-title text-primary fw-bold">
            <i class="bi bi-stars me-2"></i>Top Sản phẩm Nổi bật
        </h2>
        <hr class="section-divider" />

        @if (featuredProducts == null)
        {
            <LoadingSpinner />
        }
        else if (!featuredProducts.Any())
        {
            <div class="alert alert-warning mt-3">
                Hiện chưa có sản phẩm nào được đăng bán.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100 product-card shadow-sm border-0 hover-scale">
                            <a href="@($"/san-pham/{product.Id}")" class="text-decoration-none text-dark">
                                <img class="card-img-top rounded-top" src="@product.ImageUrl" alt="@product.Name"
                                     style="height: 220px; object-fit: cover;" />
                                <div class="card-body text-center">
                                    <h5 class="card-title fw-semibold">@product.Name</h5>
                                    <h6 class="price-tag text-primary">@product.Price.ToString("n0") VNĐ</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- 4. DỰ ÁN TIÊU BIỂU -->
    <div class="container projects-section mt-5">
        <h2 class="section-title text-primary fw-bold">Dự án Tiêu biểu</h2>
        <hr class="section-divider" />
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="project-card shadow-sm">
                    <img src="/images/project-1.jpg" alt="Dự án Biệt thự VinHomes" class="rounded-3" />
                    <div class="project-card-overlay">
                        <h5>Biệt thự VinHomes Riverside</h5>
                        <p>Giải pháp phòng tắm Master sang trọng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="project-card shadow-sm">
                    <img src="/images/project-2.jpg" alt="Dự án Căn hộ Empire City" class="rounded-3" />
                    <div class="project-card-overlay">
                        <h5>Căn hộ Empire City</h5>
                        <p>Tối ưu không gian với thiết bị thông minh</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 5. TIN TỨC & TƯ VẤN -->
    <div class="container news-section mt-5">
        <h2 class="section-title text-primary fw-bold">Tin tức & Tư vấn</h2>
        <hr class="section-divider" />
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="news-card-main shadow-sm">
                    <img src="/images/news-1.jpg" alt="Tin tức chính" class="rounded-3" />
                    <div class="news-card-content">
                        <span class="news-category">Tư vấn</span>
                        <h5>5 Xu hướng thiết kế phòng tắm dẫn đầu năm 2025</h5>
                        <p>Khám phá những ý tưởng đột phá để biến phòng tắm của bạn thành một không gian thư giãn đẳng cấp...</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="news-list">
                    <div class="news-list-item">
                        <img src="/images/news-2.jpg" alt="Tin tức phụ 1" />
                        <div>
                            <h6>Lựa chọn vòi sen thông minh: Những điều cần biết</h6>
                            <span>8 Tháng 9, 2025</span>
                        </div>
                    </div>
                    <div class="news-list-item">
                        <img src="/images/news-3.jpg" alt="Tin tức phụ 2" />
                        <div>
                            <h6>Mẹo giữ cho thiết bị vệ sinh luôn sáng bóng như mới</h6>
                            <span>5 Tháng 9, 2025</span>
                        </div>
                    </div>
                    <div class="news-list-item">
                        <img src="/images/news-4.jpg" alt="Tin tức phụ 3" />
                        <div>
                            <h6>Công nghệ xả xoáy: Sạch sâu, êm ái, không tiếng ồn</h6>
                            <span>2 Tháng 9, 2025</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 6. THƯƠNG HIỆU & ĐỐI TÁC -->
    <div class="container partners-section mt-5 mb-5">
        <h2 class="section-title text-primary fw-bold">Thương hiệu & Đối tác</h2>
        <hr class="section-divider" />
        <div class="partner-logos d-flex justify-content-around flex-wrap gap-4">
            <img src="/images/brand-1.png" alt="Brand Logo 1" class="img-fluid" />
            <img src="/images/brand-2.png" alt="Brand Logo 2" class="img-fluid" />
            <img src="/images/brand-3.png" alt="Brand Logo 3" class="img-fluid" />
            <img src="/images/brand-4.png" alt="Brand Logo 4" class="img-fluid" />
            <img src="/images/brand-5.png" alt="Brand Logo 5" class="img-fluid" />
        </div>
    </div>
</div>

@code {
    private List<Product>? featuredProducts;
    private List<Category>? categories;

    protected override async Task OnInitializedAsync()
    {
        // ✅ Chỉ hiển thị sản phẩm được “Tải lên” (IsPublished = true)
        var productsTask = DbContext.Products
            .Where(p => p.IsPublished)
            .OrderByDescending(p => p.Id)
            .Take(4)
            .ToListAsync();

        var categoriesTask = DbContext.Categories.ToListAsync();

        await Task.WhenAll(productsTask, categoriesTask);

        featuredProducts = await productsTask;
        categories = await categoriesTask;
    }
}
